<WorkerScreen>:
    name: "worker_manager"

    BaseScreenLayout:
        BoxLayout:
            orientation: 'vertical'

            CustomHeader:
                header_text: "Pracovník"
                show_back_button: True

            ScrollView:
                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(20)
                    spacing: dp(15)
                    adaptive_height: True
                    size_hint_y: None

                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        radius: [20]
                        elevation: 4
                        ripple_behavior: True
                        on_release: app.root.current = "add_worker"

                        BoxLayout:
                            padding: dp(15)
                            spacing: dp(15)
                            size_hint_y: None
                            height: dp(70)

                            MDIcon:
                                icon: "account-plus"
                                size_hint: None, None
                                size: dp(40), dp(40)
                                theme_text_color: "Custom"
                                text_color: 0, 0.7, 0.3, 1
                                pos_hint: {"center_y": 0.5}

                            MDLabel:
                                text: "Přidat Zaměstnance"
                                font_style: "Subtitle1"
                                halign: "left"
                                valign: "middle"

                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        radius: [20]
                        elevation: 4
                        ripple_behavior: True
                        on_release: app.root.current = "delete_worker"

                        BoxLayout:
                            padding: dp(15)
                            spacing: dp(15)
                            size_hint_y: None
                            height: dp(70)

                            MDIcon:
                                icon: "account-remove"
                                size_hint: None, None
                                size: dp(40), dp(40)
                                theme_text_color: "Custom"
                                text_color: 0.9, 0.2, 0.2, 1
                                pos_hint: {"center_y": 0.5}

                            MDLabel:
                                text: "Smazat Zaměstnance"
                                font_style: "Subtitle1"
                                halign: "left"
                                valign: "middle"

                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        radius: [20]
                        elevation: 4
                        ripple_behavior: True
                        on_release: app.root.current = "show_worker"

                        BoxLayout:
                            padding: dp(15)
                            spacing: dp(15)
                            size_hint_y: None
                            height: dp(70)

                            MDIcon:
                                icon: "account-box"
                                size_hint: None, None
                                size: dp(40), dp(40)
                                theme_text_color: "Custom"
                                text_color: 0.3, 0.4, 1, 1
                                pos_hint: {"center_y": 0.5}

                            MDLabel:
                                text: "Zobrazit Zaměstnance"
                                font_style: "Subtitle1"
                                halign: "left"
                                valign: "middle"

<DeleteWorkerScreen>:
    BaseScreenLayout:
        BoxLayout:
            orientation: 'vertical'

            CustomHeader:
                id: header
                header_text: "Odstranit pracovníka"
                show_back_button: True

            ScrollView:
                BoxLayout:
                    id: delete_worker_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 10
                    spacing: 10


<ShowWorkerScreen>:
    BaseScreenLayout:
        CustomHeader:
            header_text: "List pracovníků"
            show_back_button: True

        ScrollView:
            BoxLayout:
                id: worker_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10


<AddWorkerScreen>:
    BaseScreenLayout:
        CustomHeader:
            header_text: "Přidat nového pracovníka"
            show_back_button: True

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 20
                spacing: 10

                TextInput:
                    id: new_worker_first_name
                    hint_text: "Jméno pracovníka"
                    size_hint_y: None
                    height: 40

                TextInput:
                    id: new_worker_last_name
                    hint_text: "Příjmení pracovníka"
                    size_hint_y: None
                    height: 40

                TextInput:
                    id: new_worker_date_of_birth_input
                    hint_text: "Datum narození"
                    readonly: True
                    on_focus: if self.focus: root.open_date_picker()
                    size_hint_y: None
                    height: 40

                TextInput:
                    id: new_worker_address
                    hint_text: "Bydliště"
                    size_hint_y: None
                    height: 40

                Label:
                    text: "Vybraná fotka:"
                    size_hint_y: None
                    height: 30

                Image:
                    id: photo_preview
                    size_hint_y: None
                    height: 120
                    source: ""
                    allow_stretch: True
                    keep_ratio: True

                MDRaisedButton:
                    id: photo_menu_button
                    text: "Vyber fotku"
                    size_hint_y: None
                    height: 40
                    on_release: root.open_photo_menu()

                Button:
                    text: "Uložit pracovníka"
                    size_hint_y: None
                    height: 40
                    on_press: root.save_worker()
